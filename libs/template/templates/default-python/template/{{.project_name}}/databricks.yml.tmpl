bundle:
  name: {{.project_name}}

include:
  - resources/*.yml

artifacts:
    {{.project_name}}:
      type: whl
      path: "."
      build: "python3 setup.py bdist_wheel"

targets:
  development:
    workspace:
      host: {{workspace_host}}
    mode: development
    default: true

  production:
    workspace:
      host: {{workspace_host}}
      root_path: /Shared/.bundle/prod/${bundle.name}
    mode: production
    {{if is_service_principal}}
    {{- else -}}
    run_as:
      user_name: brackets user_name brackets
    {{- end -}}
